<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
           targetNamespace="http://ws.apache.org/ns/synapse"
           xmlns="http://ws.apache.org/ns/synapse">

    <xs:element name="fastXSLT">
        <xs:annotation>
            <xs:documentation source="description">
                Transforms message streams (not payloads) based on an XSLT script. This enables faster transformation,
                but you cannot specify properties, features, etc. as you do with the XSLT mediator.
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:attribute name="key" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>

</xs:schema>